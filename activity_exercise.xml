<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Exercise_Fragment"
    >
   <!-- A CardView that contains a TextView -->
   <androidx.cardview.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:id="@+id/card_view"
       android:layout_width="450dp"
       android:layout_height="200dp"
       card_view:cardBackgroundColor="@color/material_on_surface_stroke"
       card_view:cardCornerRadius="30dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_baseline_fitness_center_24"/>

      <TextView
          android:id="@+id/info_text"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="A jumping jack, also known as a star jump and called a
           side-straddle hop in the US military, is a physical jumping
           exercise performed by jumping to a position with the legs spread wide
            and
           the hands going overhead, sometimes in a clap, and then returning to a
          position with the feet together and the arms at the sides. "/>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:id="@+id/card_view1"
       android:layout_width="450dp"
       android:layout_height="200dp"
       android:padding="15dp"
       android:layout_margin="10dp"
       android:layout_marginTop="15dp"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="15dp"
       card_view:cardBackgroundColor="@color/material_on_surface_stroke"
       card_view:cardCornerRadius="30dp"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="5dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_baseline_fitness_center_24"/>

      <TextView
          android:id="@+id/info_text1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="A jumping jack, also known as a star jump and called a
          eturning to a
          position with the feet together and the arms at the sides. "/>
   </androidx.cardview.widget.CardView>





</LinearLayout>